#!/bin/bash

source "$HOME/.config/core-helpers.sh"

logfile=/tmp/sync-obsidian-automatically.log

echo "---------------" >> "$logfile"
echo "Date: $(date)" >> "$logfile"
echo "Current directory: $PWD" >> "$logfile"
echo >> "$logfile"
$HOME/.bin/lock --debounce 120 -- \
  $HOME/.bin/sync-obsidian \
    --repo-directory "$PWD" \
    --primary-branch main \
    --no-color \
  2>&1 | \
  tee -a "$logfile"
