#!/bin/bash

# Stolen from Nathan

if [ -n "$1" ]; then
  if [ -d "$1" ]; then
    pushd $1 >/dev/null
    ctags -R
    # mvim --servername $(basename $(pwd)) --remote-silent .
    mvim .
    popd >/dev/null
  else
    echo "$1 is not a directory"
  fi
else
  ctags -R
  # mvim --servername $(basename $(pwd)) --remote-silent .
  mvim .
  # echo "specify a directory to edit"
fi

# vim: ft=sh
