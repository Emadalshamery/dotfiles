ALIASES_FILE='~/.zsh/zzz_aliases'
FUNCTIONS_FILE='~/.zsh/zzz_functions'

alias edit-aliases="v $ALIASES_FILE"
alias view-aliases="less $ALIASES_FILE"
alias edit-functions="v $FUNCTIONS_FILE"
alias view-functions="less $FUNCTIONS_FILE"
alias reload-env="source $ALIASES_FILE && source $FUNCTIONS_FILE"

alias b="bundle"
alias be="bundle exec"

alias ga="git add -A"
alias gA="git add -A ."
alias gbr="git branch"
alias gbm="git branch -M"
alias gca="git commit --amend"
alias gcan="git commit --amend --no-edit"
alias gc="git commit"
alias gcm="git commit -m"
alias gco="git checkout"
alias gcp="git cherry-pick"
alias gd="git diff-base"
alias gdc="git diff-base --cached"
alias gl="git log"
alias gm="git merge --ff-only"
alias gr="git rebase"
alias gri="git rebase -i"
alias grc="git rebase --continue"
alias grs="git rebase --skip"
alias gra="git rebase --abort"
alias gRhu="git reset --hard HEAD~"
alias grhu="git reset HEAD~"
alias grm="git rm"
alias git-better-log='git branch -a | grep origin | grep -v HEAD | xargs -n 1 git log --date=iso --pretty=format:"%an %ad %d%n" -1 --decorate | grep -v master | sort'

alias r="be rspec"
alias R="rails"
alias Rm="rails db:migrate db:test:prepare"
alias Rmr="rails db:migrate:redo db:test:prepare"

alias z="zeus"
alias zc="zeus console"
alias zg="zeus generate"
alias zr="zeus rspec"
alias zR="zeus rails"
alias zRm="zeus rails db:migrate db:test:prepare"
alias zRmr="zeus rails db:migrate:redo db:test:prepare"

alias s="spring"
alias sc="spring console"
alias sg="spring generate"
alias sr="spring rspec"
alias sR="spring rails"
alias sRr="spring rails db:rollback"
alias sRm="spring rails db:migrate db:test:prepare"
alias sRmr="spring rails db:migrate:redo db:test:prepare"

alias is-running="ps aux | grep -v grep | grep"

# vi: ft=sh
