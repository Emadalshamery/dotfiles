ALIASES_FILE='~/.zsh/zzz_aliases'
FUNCTIONS_FILE='~/.zsh/zzz_functions'

alias edit-aliases="vi $ALIASES_FILE"
alias view-aliases="less $ALIASES_FILE"
alias edit-functions="vi $FUNCTIONS_FILE"
alias view-functions="less $FUNCTIONS_FILE"
alias reload-env="source $ALIASES_FILE && source $FUNCTIONS_FILE"

alias be="bundle exec"
alias b="bundle"

alias fr="foreman run"

alias ga="git add -A"
alias gA="git add -A ."
alias gap="git add -p"
alias gb="git branch"
alias gbd="git branch -D"
alias gbm="git branch -M"
alias gca="git commit --amend"
alias gc="git commit"
alias gcm="git commit -m"
alias gco="git checkout"
alias gcb="git checkout -b"
alias gd="git diff-base"
alias gdc="git diff-base --cached"
alias gl="git log"
alias gm="git merge --ff-only"
alias gp="git push"
alias gpf="git push --force"
alias gpl="git pull"
alias gr="git rebase"
alias gri="git rebase -i"
alias grc="git rebase --continue"
alias grs="git rebase --skip"
alias gra="git rebase --abort"
alias grh="git reset HEAD"
alias grhu="git reset HEAD~"
alias grm="git rm"
alias grmc="git rm --cached"
alias gsh="git show HEAD"

alias hl="heroku logs"

alias r="rspec"
alias R="be rake"
alias Rm="be rake db:migrate db:test:prepare"
alias Rmr="be rake db:migrate:redo db:test:prepare"

alias rs="rbenv shell"
alias rl="rbenv local"

alias z="zeus"
alias zc="zeus console"
alias zg="zeus generate"
alias zr="zeus rspec"
alias zR="zeus rake"
alias zRm="zeus rake db:migrate db:test:prepare"
alias zRmr="zeus rake db:migrate:redo db:test:prepare"

alias s="spring"
alias sc="spring console"
alias sg="spring generate"
alias sr="spring rspec"
alias sR="spring rake"
alias sRm="spring rake db:migrate db:test:prepare"
alias sRmr="spring rake db:migrate:redo db:test:prepare"

alias psg="ps aux | grep"

alias spark-push-sandbox="git push sandbox HEAD:master -f"
alias spark-push="git push -f && spark-push-sandbox"

alias tail-pg-log="tail -f \`ls /usr/local/var/postgres/pg_log/*.log | head -n 1\`"

